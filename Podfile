# Uncomment the next line to define a global platform for your project
platform :ios, '13.1'

target 'Bankless' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  
  # Big integer type
  pod 'BigInt'
  
  # Functional reactive extensions
  pod 'RxSwift'
  pod 'RxSwiftExt', '~> 6'
  pod 'RxCocoa'
  
  # Autolayout library
  pod 'Cartography'
  
  # Human-fiendly dates
  pod 'DateToolsSwift'
  
  # Crypto & Keychain
  pod 'KeychainAccess'
  pod 'CryptoSwift'

  # Fake data for demo purposes
  pod 'Fakery', '~> 4.0'
  
  # Image caching
  pod 'Kingfisher', '~> 7.0'
  
  # GraphQL client library
  pod 'Apollo'
  
  # Network abstraction library
  pod 'Moya/RxSwift', '~> 15.0'
  
  # OAuth2 authorization
  pod 'OAuthSwift', '~> 2.2.0'
end
